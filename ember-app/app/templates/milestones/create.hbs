<div class="fullscreen-card">
  <form {{action "submit" on="submit"}} class="flex-form split-form">
    <div class="flex-form-left">
      <label>
        {{input value=title placeholder="Title"}}
      </label>
      <label>
        {{input value=description placeholder="Description"}}
      </label>
      <label>
        {{input valueBinding="dueDate" placeholder="Due on: yyyy-mm-dd"}}
      </label>
      <label>
        {{hb-date-picker dueDateBinding="dueDate"}}
      </label>
      <button {{bind-attr disabled=disabled}} class="hb-button">Create milestone</button>
    </div>
  </form>
</div>
