{{columns/hb-task-header column=model issues=sortedIssues isCollapsed=isCollapsed}}

{{#if isCreateVisible}}
  {{columns/hb-quick-issue
    column=model
    createNewIssue=(action "createNewIssue")
    createFullscreenIssue=(action "createFullscreenIssue")
  }}
{{/if}}

<ul class="cards sortable">
  {{#each sortedIssues as |issue|}}
    {{
      hb-task-card
        issue=issue
        issues=sortedIssues
        repos=repos
        cardClick=(action attrs.openFullscreenIssue issue)
    }}
  {{/each}}
</ul>
<div class="collapsed"></div>
