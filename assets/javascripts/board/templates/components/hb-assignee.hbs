<h5 {{action "toggleSelector"}}> 
  <i  class="pull-right ui-icon ui-icon-gear"></i>
  Assignee
</h5>
{{#if selected}}
<div class="hb-selected">
  {{hb-avatar user=selected}} {{selected.login}}
</div>
{{else}}
<div class="hb-selected empty">
 No one assigned 
</div>
{{/if}}
<div class="hb-flyout">
  <div class="hb-header">
    Assign someone to this issue
  </div>
  <div class="hb-text-filter">
    {{input placeholder="Filter people" value=filterPeople}}
  </div>

  <ul>
    {{#if selected}}
    <li>
      <a {{action "clearAssignee" }} >
        <i class="ui-icon ui-icon-x-thin"></i>
        Clear assignee
      </a>
    </li>
    {{/if}}
    {{#each assignees}}
    <li>
    <a {{action "assignTo" this}} >
      <i class="ui-icon ui-icon-checkmark"></i>
      {{hb-avatar user=this}} {{login}}
    </a>
    </li>
    {{/each}}
  </ul>
</div>
