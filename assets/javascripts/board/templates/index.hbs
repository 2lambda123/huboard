<div class="sidebar">
  <div class="sidebar-wrapper">
    {{outlet sidebar}}
  </div>
</div>
<div id="content" class="content">
  <div id="stage">
    <div id="drawer">  <a {{action "toggleDrawer"}} href="#" class="arrow-right toggle-drawer"><span></span></a>
      <div class="board">
        {{outlet drawer}}
      </div>
    </div>
    <div class="board">
      <div class="headers">
        {{#each column in board_columns }}
          <div class="column" {{bind-attr style=header_style }}>
            <h3>{{column.text}}<small>{{ render column_count column }}</small></h3>
          </div>
        {{/each}}
      </div>
      <div class="columns">
        {{#each column in board_columns }}
          <div class="column" {{bind-attr style=header_style }}>
            {{ render column column }}
          </div>
        {{/each}}
      </div>
    </div>
  </div>

</div>
