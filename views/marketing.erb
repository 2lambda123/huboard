    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-28313898-1']);
      _gaq.push(['_setDomainName', 'huboard.com']);
      _gaq.push(['_trackPageview']);

      (function() {
       var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
       ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
       var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
       })();
      (function(){
      function animateNumber($input, end, duration, easing) {
        
        if($input.data("label")){
          $($input.data("label")).delay(duration - (duration-(duration-500))).animate({ opacity : 1}, { duration: duration - (duration-(duration-500)), easing: easing == undefined ? "linear" : easing });
        }
        
        $input
          .data("start", 0)
        
        .find("span")
            .animate({ width:"15px" },{duration:500, complete: function () {$(this).width("auto")}})
        .animate({"val": Math.ceil(end), opacity: 1, "paddingLeft": "6px", "paddingRight":"6px" }, {
            easing: easing == undefined ? "linear" : easing,
            duration: duration == undefined ? 500 : parseInt(duration),
            step: function(fin,obj) {
              
              if(obj.prop === "val"){
                var $this = jQuery(this);
                var start = parseInt($this.data("start"));
                $this.text(addCommas(parseInt(fin).toString())); 
              }
            }
        });
      }

        setTimeout(function() {
          animateNumber($(".brand .stat"), Math.random() * 10000, 4000, "easeInOutCubic");
        }, 2000);
      
      
      function addCommas(nStr) {
        
        nStr += '';
        x = nStr.split('.');
        x1 = x[0];
        x2 = x.length > 1 ? '.' + x[1] : '';
        var rgx = /(\d+)(\d{3})/;
        while (rgx.test(x1)) {
        x1 = x1.replace(rgx, '$1' + ',' + '$2');
        }
        return x1 + x2;
      }
    })();


</script>
